<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    android:id="@id/ll_frase"
    android:paddingLeft="3.0dip"
    android:paddingTop="1.0dip"
    android:paddingRight="3.0dip"
    android:paddingBottom="1.0dip"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:orientation="horizontal"
        android:id="@id/fl_frase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:id="@id/v_foto"
            android:background="#ff000000"
            android:visibility="gone"
            android:layout_width="5.0dip"
            android:layout_height="48.0dip" />
        <ImageView
            android:id="@id/iv_avatar_f"
            android:padding="1.0dip"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:adjustViewBounds="true" />
        <ProgressBar
            android:layout_gravity="center"
            android:id="@id/pb_foto"
            android:visibility="gone"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip" />
        <ProgressBar
            android:layout_gravity="center"
            android:id="@id/pb_foto_inv"
            android:visibility="gone"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            style="@style/pb_inverse" />
    </FrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/ll_frase_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4.0dip"
        android:layout_marginStart="4.0dip">
        <LinearLayout
            android:id="@id/ll_frase_cab"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:id="@id/ll_frase_tvs"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">
                <TextView
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:id="@id/tv_nombre_f"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_weight="1.0" />
                <TextView
                    android:textStyle="italic"
                    android:id="@id/tv_fcrea_f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:maxLines="1"
                    android:layout_weight="0.0"
                    android:layout_marginStart="5.0dip" />
                <ImageView
                    android:id="@id/iv_ban"
                    android:visibility="gone"
                    android:layout_width="20.0dip"
                    android:layout_height="20.0dip"
                    android:layout_marginLeft="5.0dip"
                    android:src="@drawable/spam"
                    android:adjustViewBounds="true"
                    android:layout_weight="0.0"
                    android:layout_marginStart="5.0dip" />
            </LinearLayout>
            <LinearLayout
                android:gravity="end"
                android:id="@id/ll_tts"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@id/iv_tts"
                    android:layout_width="30.0dip"
                    android:layout_height="wrap_content"
                    android:src="@drawable/play"
                    android:adjustViewBounds="true"
                    android:paddingStart="5.0dip" />
                <ImageView
                    android:id="@id/iv_tts_pause"
                    android:visibility="gone"
                    android:layout_width="30.0dip"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pause_2"
                    android:adjustViewBounds="true"
                    android:paddingStart="5.0dip" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@id/tv_frase_f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="28.0px"
            android:maxLines="5" />
        <FrameLayout
            android:orientation="horizontal"
            android:id="@id/fl_f"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:layout_marginBottom="5.0dip"
            android:layout_marginVertical="5.0dip">
            <ImageView
                android:id="@id/iv_foto_f"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true" />
            <ProgressBar
                android:layout_gravity="center"
                android:id="@id/pb_foto_f"
                android:visibility="gone"
                android:layout_width="20.0dip"
                android:layout_height="20.0dip" />
            <ProgressBar
                android:layout_gravity="center"
                android:id="@id/pb_foto_f_inv"
                android:visibility="gone"
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                style="@style/pb_inverse" />
        </FrameLayout>
        <com.appnext.nativeads.NativeAdView
            android:id="@id/na_view"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@id/na_ad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@id/na_media"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true" />
                <TextView
                    android:id="@id/na_install"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:text=""
                    android:layout_below="@id/na_media" />
            </RelativeLayout>
        </com.appnext.nativeads.NativeAdView>
        <RelativeLayout
            android:id="@id/sa_ad"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@id/sa_iv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true" />
            <TextView
                android:id="@id/sa_install"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:text=""
                android:layout_below="@id/sa_iv" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>