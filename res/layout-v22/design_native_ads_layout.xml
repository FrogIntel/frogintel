<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:paddingTop="3.0dip"
    android:paddingBottom="3.0dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingVertical="3.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:textSize="11.0sp"
        android:textStyle="bold"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:id="@id/suggested_apps_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/suggested_apps_title"
        android:layout_alignParentTop="true"
        android:layoutDirection="locale"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <FrameLayout
        android:id="@id/privacy_icon_container_right"
        android:visibility="invisible"
        android:layout_width="17.0dip"
        android:layout_height="wrap_content"
        android:layout_marginRight="6.0dip"
        app:layout_constraintBottom_toBottomOf="@id/suggested_apps_title"
        app:layout_constraintLeft_toRightOf="@id/design_native_ads_container"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/suggested_apps_title">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@id/privacy_icon_right"
            android:background="@drawable/apnxt_na_i_icon_dark"
            android:visibility="visible"
            android:layout_width="12.0dip"
            android:layout_height="12.0dip"
            android:scaleType="fitXY"
            android:alpha="0.2" />
    </FrameLayout>
    <FrameLayout
        android:id="@id/privacy_icon_container_left"
        android:visibility="invisible"
        android:layout_width="17.0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6.0dip"
        app:layout_constraintBottom_toBottomOf="@id/suggested_apps_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/design_native_ads_container"
        app:layout_constraintTop_toTopOf="@id/suggested_apps_title">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@id/privacy_icon_left"
            android:background="@drawable/apnxt_na_i_icon_dark"
            android:visibility="visible"
            android:layout_width="12.0dip"
            android:layout_height="12.0dip"
            android:scaleType="fitXY"
            android:alpha="0.2" />
    </FrameLayout>
    <FrameLayout
        android:id="@id/design_native_ads_container"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="4.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/privacy_icon_container_left"
        app:layout_constraintRight_toLeftOf="@id/privacy_icon_container_right"
        app:layout_constraintTop_toBottomOf="@id/suggested_apps_title" />
</androidx.constraintlayout.widget.ConstraintLayout>