<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@id/cv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="0.0dip"
    card_view:cardBackgroundColor="#ffffffff"
    card_view:cardCornerRadius="4.0dip"
    cardUseCompatPadding="true"
    contentPadding="0.0dip"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/ll_menugrid_row"
        android:padding="5.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@id/iv_menugrid"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0.0dip"
            android:adjustViewBounds="true" />
        <TextView
            android:id="@id/tv_menugrid"
            android:background="@drawable/fondo_rounded"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0.0dip" />
    </LinearLayout>
</androidx.cardview.widget.CardView>