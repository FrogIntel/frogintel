<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:id="@id/fila"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:orientation="horizontal"
        android:padding="6.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center|top"
            android:id="@id/iv_usucoment"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:adjustViewBounds="true" />
        <LinearLayout
            android:layout_gravity="top"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6.0dip"
            android:layout_marginRight="25.0dip"
            android:layout_toRightOf="@id/iv_usucoment"
            android:layout_marginStart="6.0dip"
            android:layout_marginEnd="25.0dip"
            android:layout_toEndOf="@id/iv_usucoment">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:id="@id/tv_nombrecoment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10.0dip"
                    android:singleLine="true"
                    android:layout_marginEnd="10.0dip" />
                <TextView
                    android:id="@id/tv_fcoment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true" />
            </LinearLayout>
            <TextView
                android:id="@id/tv_coment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="false" />
        </LinearLayout>
        <ImageView
            android:layout_gravity="top"
            android:id="@id/iv_elimcoment"
            android:visibility="gone"
            android:layout_width="35.0dip"
            android:layout_height="35.0dip"
            android:src="@drawable/eliminar"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <ImageView
            android:layout_gravity="top"
            android:id="@id/iv_spamcoment"
            android:visibility="gone"
            android:layout_width="35.0dip"
            android:layout_height="35.0dip"
            android:src="@drawable/spam_p"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</LinearLayout>