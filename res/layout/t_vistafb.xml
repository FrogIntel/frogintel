<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    android:id="@id/drawer_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/ll_princ"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <FrameLayout
            android:id="@id/w_root"
            android:padding="0.0dip"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">
            <ListView
                android:orientation="vertical"
                android:id="@id/w_main"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="16.0sp"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@id/w_empty_view"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/sin_resultados" />
            <ImageView
                android:layout_gravity="end|center|top"
                android:id="@id/ico_widget"
                android:visibility="gone"
                android:layout_width="40.0dip"
                android:layout_height="wrap_content"
                android:layout_margin="10.0dip"
                android:src="@drawable/add_widget"
                android:adjustViewBounds="true" />
            <ProgressBar
                android:layout_gravity="center"
                android:id="@id/w_pb"
                android:visibility="gone"
                android:layout_width="40.0dip"
                android:layout_height="40.0dip"
                android:layout_margin="10.0dip" />
        </FrameLayout>
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@id/ll_ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <include
            layout="@layout/bottom_menu" />
    </LinearLayout>
    <ListView
        android:layout_gravity="start"
        android:id="@id/left_drawer"
        android:layout_width="240.0dip"
        android:layout_height="fill_parent"
        android:choiceMode="singleChoice" />
</androidx.drawerlayout.widget.DrawerLayout>