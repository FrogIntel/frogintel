<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    android:id="@id/fila"
    android:paddingLeft="16.0dip"
    android:paddingTop="10.0dip"
    android:paddingRight="16.0dip"
    android:paddingBottom="10.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:layout_gravity="center"
        android:layout_width="133.0dip"
        android:layout_height="100.0dip">
        <ImageView
            android:layout_gravity="center"
            android:id="@id/videoThumb"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="5.0dip"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_marginEnd="5.0dip" />
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.4" />
            <ImageView
                android:layout_gravity="center"
                android:id="@id/videoPlay"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:src="@drawable/play_pp"
                android:adjustViewBounds="true"
                android:layout_weight="0.2" />
            <View
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.4" />
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18.0dip"
            android:ellipsize="end"
            android:id="@id/videoDescr"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textIsSelectable="false" />
        <View
            android:id="@id/videoDescrSep"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip">
            <ImageView
                android:layout_gravity="center"
                android:id="@id/videoUser"
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_marginEnd="5.0dip" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16.0dip"
                    android:ellipsize="end"
                    android:id="@id/videoName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textIsSelectable="false" />
                <TextView
                    android:textSize="16.0dip"
                    android:id="@id/videoDate"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:textSize="16.0dip"
            android:id="@id/videoDist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1" />
        <TextView
            android:textSize="16.0dip"
            android:id="@id/videoEstado"
            android:background="@drawable/borde_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1" />
        <LinearLayout
            android:orientation="horizontal"
            android:id="@id/ll_videoLikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@id/iv_videoLikes"
                android:layout_width="wrap_content"
                android:layout_height="18.0dip"
                android:layout_marginRight="5.0dip"
                android:adjustViewBounds="true"
                android:drawable="@drawable/like"
                android:layout_marginEnd="5.0dip" />
            <TextView
                android:textSize="16.0dip"
                android:gravity="top"
                android:id="@id/videoLikes"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:maxLines="1" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@id/ll_videoVistos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@id/iv_videoVistos"
                android:layout_width="wrap_content"
                android:layout_height="18.0dip"
                android:layout_marginTop="2.0dip"
                android:layout_marginRight="5.0dip"
                android:adjustViewBounds="true"
                android:drawable="@drawable/eye"
                android:layout_marginEnd="5.0dip" />
            <TextView
                android:textSize="16.0dip"
                android:id="@id/videoVistos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>