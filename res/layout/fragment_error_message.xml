<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:theme="@style/Theme.AppCompat.SidebarDrawer"
    android:id="@id/error_message_base_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@id/error_message_vertical_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.66" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/error_message_layout"
        android:background="@color/error_message_layout_color"
        android:layout_width="0.0dip"
        android:layout_height="0.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/error_message_vertical_guideline"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@id/error_message_icon"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12.0dip"
            android:src="@drawable/error_message_icon"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toTopOf="@id/error_message_title_view"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintEnd_toEndOf="@id/error_message_layout"
            app:layout_constraintStart_toStartOf="@id/error_message_layout" />
        <TextView
            android:gravity="center"
            android:id="@id/error_message_title_view"
            android:background="@android:color/transparent"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4.0dip"
            android:text="@string/error_message_text"
            android:contentDescription="@string/error_message_text"
            app:layout_constraintBottom_toTopOf="@id/error_message_description_view"
            app:layout_constraintEnd_toEndOf="@id/error_message_layout"
            app:layout_constraintStart_toStartOf="@id/error_message_layout"
            style="@style/SideDrawerAdsControlsMenuTextTitle" />
        <TextView
            android:gravity="center"
            android:id="@id/error_message_description_view"
            android:background="@android:color/transparent"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="@string/error_message_description_text"
            android:contentDescription="@string/error_message_description_text"
            android:layout_marginStart="43.5dip"
            android:layout_marginEnd="43.5dip"
            app:layout_constraintBottom_toBottomOf="@id/error_message_layout"
            app:layout_constraintEnd_toEndOf="@id/error_message_layout"
            app:layout_constraintStart_toStartOf="@id/error_message_layout"
            app:layout_constraintTop_toTopOf="@id/error_message_layout"
            style="@style/SideDrawerAdsControlsMenuTextBody" />
        <Button
            android:id="@id/error_message_back_button"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="0.0dip"
            android:layout_height="40.0dip"
            android:layout_marginTop="36.0dip"
            android:text="@string/back_button_text"
            android:contentDescription="@string/back_button_text"
            android:layout_marginStart="22.0dip"
            android:layout_marginEnd="22.0dip"
            app:layout_constraintEnd_toEndOf="@id/error_message_layout"
            app:layout_constraintStart_toStartOf="@id/error_message_layout"
            app:layout_constraintTop_toBottomOf="@id/error_message_description_view">
            <requestFocus />
        </Button>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>