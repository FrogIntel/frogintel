<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    android:id="@id/drawer_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/ll_princ"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:id="@id/rl_fondo"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">
            <ImageView
                android:id="@id/iv_fondo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
            <ScrollView
                android:id="@id/scrollView1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="5.0dip" />
                    <TableLayout
                        android:id="@id/tableLayout1"
                        android:padding="5.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5.0dip"
                            android:layout_marginBottom="5.0dip">
                            <ImageView
                                android:id="@id/iv_search"
                                android:layout_width="25.0dip"
                                android:layout_height="25.0dip"
                                android:src="@drawable/search_white" />
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textStyle="bold"
                                    android:id="@id/tv_tit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tit_buscador" />
                                <View
                                    android:id="@id/v_sep"
                                    android:background="#ffffffff"
                                    android:layout_width="fill_parent"
                                    android:layout_height="2.0dip" />
                            </LinearLayout>
                        </LinearLayout>
                        <TableRow
                            android:id="@id/tr_texto"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_gravity="center_vertical"
                                android:id="@id/tv_busc_texto"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/busc_texto" />
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0">
                                <EditText
                                    android:id="@id/c_busc_texto"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:width="400.0dip"
                                    android:inputType="text"
                                    android:textCursorDrawable="@null" />
                            </LinearLayout>
                        </TableRow>
                        <TableRow
                            android:id="@id/tr_cat"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_gravity="center_vertical"
                                android:id="@id/tv_busc_cat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/busc_cat" />
                            <LinearLayout
                                android:layout_gravity="center_vertical"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <Spinner
                                    android:id="@id/sp_busc_cat"
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TableLayout
                                    android:layout_gravity="center_vertical"
                                    android:id="@id/tl_busc_cat"
                                    android:background="@drawable/fondo_rounded"
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2.0dip">
                                    <TextView
                                        android:textStyle="bold"
                                        android:layout_gravity="center_vertical"
                                        android:id="@id/c_busc_cat"
                                        android:padding="3.0dip"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="1.0dip"
                                        android:maxWidth="125.0dip"
                                        android:text="" />
                                </TableLayout>
                                <ImageView
                                    android:layout_gravity="center_vertical"
                                    android:id="@id/iv_cat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5.0dip"
                                    android:src="@drawable/tree" />
                                <ImageView
                                    android:layout_gravity="center_vertical"
                                    android:id="@id/iv_cat_limpiar"
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/reload" />
                            </LinearLayout>
                        </TableRow>
                        <TableRow
                            android:id="@id/tr_precio"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_gravity="center_vertical"
                                android:id="@id/tv_busc_precio"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/busc_precio" />
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <EditText
                                    android:gravity="end"
                                    android:id="@id/c_busc_precio"
                                    android:layout_width="100.0dip"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:numeric="integer"
                                    android:inputType="number"
                                    android:textCursorDrawable="@null" />
                                <TextView
                                    android:id="@id/busc_divisa"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                        </TableRow>
                        <TableRow
                            android:id="@id/tr_antiguedad"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_gravity="center_vertical"
                                android:id="@id/tv_busc_antiguedad"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/busc_antiguedad" />
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TableLayout
                                    android:layout_gravity="center_vertical"
                                    android:id="@id/tl_busc_antiguedad"
                                    android:background="@drawable/fondo_rounded"
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2.0dip">
                                    <TextView
                                        android:textStyle="bold"
                                        android:layout_gravity="center_vertical"
                                        android:id="@id/c_busc_antiguedad"
                                        android:padding="3.0dip"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="1.0dip"
                                        android:text="" />
                                </TableLayout>
                                <ImageView
                                    android:layout_gravity="center_vertical"
                                    android:id="@id/iv_antiguedad"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5.0dip"
                                    android:src="@drawable/calendar" />
                                <ImageView
                                    android:layout_gravity="center_vertical"
                                    android:id="@id/iv_antiguedad_limpiar"
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/reload" />
                            </LinearLayout>
                        </TableRow>
                        <TableRow
                            android:id="@id/tr_orden"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_gravity="center_vertical"
                                android:id="@id/tv_busc_orden"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/busc_orden" />
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <Spinner
                                    android:layout_gravity="center_vertical"
                                    android:id="@id/c_busc_orden"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <ToggleButton
                                    android:layout_gravity="center_vertical"
                                    android:id="@id/togglebutton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textOn="A > Z"
                                    android:textOff="Z > A" /> /> </LinearLayout>
                        </TableRow>
                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15.0dip">
                            <View
                                android:layout_width="1.0dip"
                                android:layout_height="1.0dip" />
                            <FrameLayout
                                android:layout_gravity="start"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@id/iv_btn_fondo_n"
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/btn_fondo_n" />
                                <ImageView
                                    android:id="@id/iv_btn_fondo_b"
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/btn_fondo_b" />
                                <ImageView
                                    android:id="@id/button1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </FrameLayout>
                        </TableRow>
                    </TableLayout>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@id/ll_ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <include
            layout="@layout/bottom_menu" />
    </LinearLayout>
    <ListView
        android:layout_gravity="start"
        android:id="@id/left_drawer"
        android:layout_width="240.0dip"
        android:layout_height="fill_parent"
        android:choiceMode="singleChoice" />
</androidx.drawerlayout.widget.DrawerLayout>