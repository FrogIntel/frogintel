<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:id="@id/ll_list_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/ll_likes_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <FrameLayout
            android:layout_gravity="center"
            android:id="@id/fl_img"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_margin="5.0dip">
            <ImageView
                android:layout_gravity="center"
                android:id="@id/likes_img"
                android:layout_width="40.0dip"
                android:layout_height="40.0dip"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true" />
            <ProgressBar
                android:layout_gravity="center"
                android:id="@id/likes_img_pb"
                android:visibility="gone"
                android:layout_width="30.0dip"
                android:layout_height="30.0dip" />
        </FrameLayout>
        <TextView
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:id="@id/likes_nombre"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            android:maxLines="1"
            android:layout_weight="1.0" />
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@id/likes_fav"
            android:layout_width="30.0dip"
            android:layout_height="30.0dip"
            android:layout_margin="5.0dip"
            android:src="@drawable/favorito_p"
            android:adjustViewBounds="true" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/ll_likes_mas"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:textStyle="bold"
            android:gravity="center"
            android:id="@id/tv_likes_mas"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="10.0dip"
            android:text="@string/mas" />
    </LinearLayout>
</LinearLayout>