<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:id="@id/fila"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:orientation="horizontal"
        android:padding="6.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@id/f1"
            android:padding="1.0px"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_marginRight="6.0dip"
            android:adjustViewBounds="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="6.0dip" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="25.0dip"
            android:layout_toRightOf="@id/f1"
            android:layout_centerVertical="true"
            android:layout_marginEnd="25.0dip"
            android:layout_toEndOf="@id/f1">
            <TextView
                android:textStyle="bold"
                android:id="@id/titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true" />
            <TextView
                android:id="@id/nusus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true" />
        </LinearLayout>
        <ImageView
            android:id="@id/iv_ir"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:src="@drawable/ir"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:rotationY="@integer/angle_rtl_180"
            android:layout_alignParentEnd="true" /> /> </RelativeLayout>
    <View
        android:background="#66000000"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip" />
</LinearLayout>