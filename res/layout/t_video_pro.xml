<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    android:id="@id/drawer_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/ll_princ"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:orientation="vertical"
            android:id="@id/ll_todo"
            android:background="@color/com_facebook_blue"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">
            <frog.intel.FullscreenVideoLayout_pro
                android:id="@id/vv"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <LinearLayout
                    android:gravity="end"
                    android:id="@id/ll_btns"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <ImageView
                        android:id="@id/btn_saltar"
                        android:background="#ff212121"
                        android:padding="5.0dip"
                        android:layout_width="50.0dip"
                        android:layout_height="50.0dip"
                        android:layout_margin="20.0dip"
                        android:src="@drawable/close" />
                </LinearLayout>
            </frog.intel.FullscreenVideoLayout_pro>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@id/ll_barra"
                android:background="#ff757575"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@id/ll_likes"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4.0dip">
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:id="@id/iv_like"
                        android:layout_width="35.0dip"
                        android:layout_height="35.0dip"
                        android:src="@drawable/like" />
                    <TextView
                        android:textColor="#ffffffff"
                        android:layout_gravity="center_vertical"
                        android:id="@id/tv_likes_n"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:text=""
                        android:fontFamily="sans-serif"
                        android:layout_marginStart="10.0dip" />
                    <TextView
                        android:textColor="#ffffffff"
                        android:layout_gravity="center_vertical"
                        android:id="@id/tv_likes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginStart="10.0dip" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="end|center"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="4.0dip">
                    <ImageView
                        android:id="@id/iv_reportar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/spam" />
                    <ImageView
                        android:id="@id/iv_elim"
                        android:visibility="gone"
                        android:layout_width="35.0dip"
                        android:layout_height="35.0dip"
                        android:src="@drawable/eliminar" />
                </LinearLayout>
            </LinearLayout>
            <ScrollView
                android:id="@id/sc_coments"
                android:background="#ffcccccc"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <TextView
                        android:textStyle="bold"
                        android:textColor="#ffffffff"
                        android:id="@id/tv_coments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginBottom="10.0dip"
                        android:text="@string/comentariospub"
                        android:layout_marginStart="10.0dip" />
                    <RelativeLayout
                        android:orientation="horizontal"
                        android:id="@id/rl_enviarcoment"
                        android:padding="6.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center|top"
                            android:id="@id/iv_usucoment_self"
                            android:layout_width="40.0dip"
                            android:layout_height="40.0dip"
                            android:adjustViewBounds="true" />
                        <LinearLayout
                            android:layout_gravity="top"
                            android:orientation="vertical"
                            android:id="@id/ll_usucoment_self"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6.0dip"
                            android:layout_marginRight="45.0dip"
                            android:layout_toRightOf="@id/iv_usucoment_self"
                            android:layout_marginStart="6.0dip"
                            android:layout_marginEnd="45.0dip"
                            android:layout_toEndOf="@id/iv_usucoment_self">
                            <TextView
                                android:textStyle="bold"
                                android:id="@id/tv_tu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tu"
                                android:singleLine="true" />
                            <FrameLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">
                                <EditText
                                    android:id="@id/et_coment_self"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:maxLength="255"
                                    android:inputType="textShortMessage"
                                    android:textCursorDrawable="@null" />
                                <ProgressBar
                                    android:layout_gravity="center_vertical"
                                    android:id="@id/pb_chat_env"
                                    android:visibility="gone"
                                    android:layout_width="25.0dip"
                                    android:layout_height="25.0dip"
                                    android:layout_marginLeft="10.0dip"
                                    android:layout_marginStart="10.0dip" />
                                <ProgressBar
                                    android:layout_gravity="center_vertical"
                                    android:id="@id/pb_chat_env_inv"
                                    android:visibility="gone"
                                    android:layout_width="25.0dip"
                                    android:layout_height="25.0dip"
                                    android:layout_marginLeft="10.0dip"
                                    android:layout_marginStart="10.0dip"
                                    style="@style/pb_inverse" />
                            </FrameLayout>
                        </LinearLayout>
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5.0dip"
                            android:layout_alignBottom="@id/ll_usucoment_self"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true">
                            <ImageView
                                android:id="@id/iv_enviarcom_fondo_n"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/btn_fondo_p_n" />
                            <ImageView
                                android:id="@id/iv_enviarcom_fondo_b"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/btn_fondo_p_b" />
                            <ImageView
                                android:id="@id/iv_enviarcoment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:rotationY="@integer/angle_rtl_180" />
                        </FrameLayout>
                    </RelativeLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@id/ll_coments"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                    <FrameLayout
                        android:id="@id/fl_mascoments"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5.0dip"
                        android:layout_marginTop="5.0dip"
                        android:layout_marginBottom="10.0dip"
                        android:layout_marginStart="5.0dip">
                        <ImageView
                            android:id="@id/iv_mascoments_fondo_n"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/btn_fondo_p_n" />
                        <ImageView
                            android:id="@id/iv_mascoments_fondo_b"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/btn_fondo_p_b" />
                        <ImageView
                            android:id="@id/iv_mascoments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </FrameLayout>
                    <ProgressBar
                        android:id="@id/pb_mascoments"
                        android:visibility="gone"
                        android:layout_width="40.0dip"
                        android:layout_height="40.0dip"
                        android:layout_marginLeft="5.0dip"
                        android:layout_marginTop="5.0dip"
                        android:layout_marginBottom="10.0dip"
                        android:layout_marginStart="5.0dip" />
                    <ProgressBar
                        android:id="@id/pb_mascoments_inv"
                        android:visibility="gone"
                        android:layout_width="40.0dip"
                        android:layout_height="40.0dip"
                        android:layout_marginLeft="5.0dip"
                        android:layout_marginTop="5.0dip"
                        android:layout_marginBottom="10.0dip"
                        android:layout_marginStart="5.0dip"
                        style="@style/pb_inverse" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@id/ll_ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <include
            layout="@layout/bottom_menu" />
    </LinearLayout>
    <ListView
        android:layout_gravity="start"
        android:id="@id/left_drawer"
        android:layout_width="240.0dip"
        android:layout_height="fill_parent"
        android:choiceMode="singleChoice" />
</androidx.drawerlayout.widget.DrawerLayout>