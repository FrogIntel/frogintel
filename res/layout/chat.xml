<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    android:id="@id/drawer_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/ll_princ"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:layout_marginBottom="5.0dip">
            <ImageView
                android:id="@id/iv_chat"
                android:layout_width="25.0dip"
                android:layout_height="25.0dip"
                android:layout_marginLeft="3.0dip"
                android:layout_marginRight="3.0dip"
                android:src="@drawable/chat" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:id="@id/tv_tit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tit_chat" />
                <View
                    android:id="@id/v_sep"
                    android:background="#ffffffff"
                    android:layout_width="fill_parent"
                    android:layout_height="2.0dip" />
            </LinearLayout>
        </LinearLayout>
        <ScrollView
            android:id="@id/sv_chat"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@id/llchat"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginStart="5.0dip" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:background="#ffdddddd"
                    android:padding="2.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0">
                        <EditText
                            android:layout_gravity="center_vertical"
                            android:id="@id/c_mensaje"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:width="700.0dip"
                            android:maxLength="150"
                            android:inputType="textAutoCorrect|textCapSentences|textShortMessage"
                            android:textCursorDrawable="@null" />
                        <ProgressBar
                            android:layout_gravity="center_vertical"
                            android:id="@id/pb_chat_env"
                            android:visibility="gone"
                            android:layout_width="25.0dip"
                            android:layout_height="25.0dip"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginStart="10.0dip"
                            style="@style/pb_inverse" />
                    </FrameLayout>
                    <FrameLayout
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@id/iv_btn_fondo_n"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/btn_fondo_p_n" />
                        <ImageView
                            android:id="@id/iv_btn_fondo_b"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/btn_fondo_p_b" />
                        <ImageView
                            android:id="@id/iv_env"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:rotationY="@integer/angle_rtl_180" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@id/ll_ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <include
            layout="@layout/bottom_menu" />
    </LinearLayout>
    <ListView
        android:layout_gravity="start"
        android:id="@id/left_drawer"
        android:layout_width="240.0dip"
        android:layout_height="fill_parent"
        android:choiceMode="singleChoice" />
</androidx.drawerlayout.widget.DrawerLayout>