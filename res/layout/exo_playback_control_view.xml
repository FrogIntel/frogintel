<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:background="#cc757575"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4.0dip">
        <ImageButton
            android:layout_gravity="center"
            android:id="@id/exo_play"
            android:background="#00000000"
            android:visibility="gone"
            android:layout_width="32.0dip"
            android:layout_height="32.0dip"
            android:src="@drawable/exo_controls_play" />
        <ImageButton
            android:layout_gravity="center"
            android:id="@id/exo_pause"
            android:background="#00000000"
            android:layout_width="32.0dip"
            android:layout_height="32.0dip"
            android:src="@drawable/exo_controls_pause" />
        <TextView
            android:textSize="14.0sp"
            android:textStyle="bold"
            android:textColor="#ffbebebe"
            android:id="@id/exo_position"
            android:paddingLeft="4.0dip"
            android:paddingRight="4.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false" />
        <androidx.media3.ui.DefaultTimeBar
            android:id="@id/exo_progress"
            android:layout_width="0.0dip"
            android:layout_height="26.0dip"
            android:layout_weight="1.0" />
        <TextView
            android:textSize="14.0sp"
            android:textStyle="bold"
            android:textColor="#ffbebebe"
            android:id="@id/exo_duration"
            android:paddingLeft="4.0dip"
            android:paddingRight="4.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false" />
        <FrameLayout
            android:layout_gravity="right"
            android:id="@id/exo_fullscreen_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginStart="10.0dip">
            <ImageView
                android:layout_gravity="center"
                android:id="@id/exo_fullscreen_icon"
                android:layout_width="32.0dip"
                android:layout_height="32.0dip"
                android:src="@drawable/fvl_fullscreen_reader_white"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true" />
        </FrameLayout>
        <FrameLayout
            android:layout_gravity="right"
            android:id="@id/exo_pip_button"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginStart="10.0dip">
            <ImageView
                android:layout_gravity="center"
                android:id="@id/exo_pip_icon"
                android:layout_width="32.0dip"
                android:layout_height="32.0dip"
                android:src="@drawable/picture_in_picture"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true" />
        </FrameLayout>
        <FrameLayout
            android:layout_gravity="right"
            android:id="@id/exo_download_button"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginStart="10.0dip">
            <ImageView
                android:layout_gravity="center"
                android:id="@id/exo_download_icon"
                android:layout_width="32.0dip"
                android:layout_height="32.0dip"
                android:src="@drawable/fvl_download_white"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true" />
        </FrameLayout>
        <FrameLayout
            android:layout_gravity="right"
            android:id="@id/exo_cast_button"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginStart="10.0dip">
            <androidx.mediarouter.app.MediaRouteButton
                android:layout_gravity="center"
                android:id="@id/vcv_img_cast"
                android:layout_width="32.0dip"
                android:layout_height="32.0dip"
                android:adjustViewBounds="true"
                android:mediaRouteTypes="user" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>