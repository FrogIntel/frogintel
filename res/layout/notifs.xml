<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    android:id="@id/drawer_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/ll_princ"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="100.0">
            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10.0dip"
                        android:layout_marginBottom="10.0dip">
                        <TextView
                            android:textStyle="bold"
                            android:id="@id/tv_listanotifs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5.0dip"
                            android:text="@string/notificaciones"
                            android:layout_centerVertical="true"
                            android:textAllCaps="true"
                            android:layout_marginStart="5.0dip" />
                        <ImageView
                            android:id="@id/btnsettings"
                            android:visibility="gone"
                            android:layout_width="24.0dip"
                            android:layout_height="24.0dip"
                            android:layout_marginRight="20.0dip"
                            android:layout_toLeftOf="@id/btntrash"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="20.0dip"
                            android:layout_toStartOf="@id/btntrash" />
                        <ImageView
                            android:id="@id/btntrash"
                            android:layout_width="24.0dip"
                            android:layout_height="24.0dip"
                            android:layout_marginRight="5.0dip"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="5.0dip"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>
                    <View
                        android:id="@id/v_listanotifs"
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip" />
                    <TextView
                        android:textColor="#ff666666"
                        android:id="@id/tv_sinnotifs"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5.0dip"
                        android:text="@string/listanotifs_vacia" />
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@id/llnotifs"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        <LinearLayout
            android:gravity="bottom"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@id/ll_ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <include
            layout="@layout/bottom_menu" />
    </LinearLayout>
    <ListView
        android:layout_gravity="start"
        android:id="@id/left_drawer"
        android:layout_width="240.0dip"
        android:layout_height="fill_parent"
        android:choiceMode="singleChoice" />
</androidx.drawerlayout.widget.DrawerLayout>